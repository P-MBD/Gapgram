<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Title of the Post -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:paddingBottom="4dp" />

    <!-- Time of Post -->
    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#666666"
        android:paddingBottom="4dp"/>

    <!-- Image of the Post -->
    <ImageView
        android:id="@+id/postImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/post_image_desc"
        android:layout_marginBottom="8dp"/>

    <!-- Message/Caption of the Post -->
    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#333333"
        android:paddingBottom="8dp" />

    <!-- Like, Comment, and Share Counters -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start">

        <TextView
            android:id="@+id/likesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#666666"
            android:drawableLeft="@drawable/baseline_favorite_border_24"
            android:drawablePadding="4dp"
            android:text="0 Likes"
            android:paddingEnd="16dp"/>

        <TextView
            android:id="@+id/commentsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#666666"
            android:drawableLeft="@drawable/baseline_comment_24"
            android:drawablePadding="4dp"
            android:text="0 Comments"
            android:paddingEnd="16dp"/>

        <TextView
            android:id="@+id/sharesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#666666"
            android:drawableLeft="@drawable/baseline_share_24"
            android:drawablePadding="4dp"
            android:text="0 Shares" />
    </LinearLayout>

</LinearLayout>